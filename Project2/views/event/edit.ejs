<%- include('../partials/header.ejs')%>
<div class = "container form-container">
    
    <form method = "POST" action = "/events/<%= event.id%>?_method=PUT" class="new-form" enctype="multipart/form-data">

        <label for="title" >Title</label>
        <input type="text" id="title" name="title" value = "<%= event.title%>">
        
        <label for="details">Details</label>
        <textarea rows="5" id="details" name="details" class = "fixed-width"><%= event.details%></textarea>

        <label>Where</label>
        <input class="form-control" type="text" placeholder="Location" id="location" name="location" value="<%= event.location%>">
      
        <label>Start</label>
        <input type="datetime-local" id="startTime" class="form-control" name="startTime" value="<%= event.startTime%>">

        <label>End</label>
        <input type="datetime-local" class="form-control" id="endTime" name="endTime" value="<%= event.endTime%>">
  
        <label>Image</label>
        <input class="form-control" type="file" name="image" value="<%= event.image %>">
        
        <input type="submit" value="Submit">   
      
    </form>

</div>


<%- include('../partials/footer.ejs')%>